<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_marginTop="32dp"
        android:background="#ED7D6B">

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_media_play"
            android:tint="#000000" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/profile_picture">

            <TextView
                android:id="@+id/bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="TaiMan"
                android:textColor="@color/pure_white"
                android:textSize="36sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/bmi"
                android:layout_marginRight="12dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Last body check: Mar,16"
                    android:textColor="@color/pure_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:id="@+id/weight"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/height"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:text="Weight: 107 lbs"-->
                <!--android:textColor="@color/pure_white"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold" />-->
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile">

        <TextView
            android:id="@+id/highRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="12dp"
            android:text="高風險: "
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/highRisk"
            android:layout_toRightOf="@id/highRisk"
            android:text="高膽固醇血症(Hypercholesterolemia)\n乙型地中海型貧血(Beta thalassemia)"
            android:textSize="20sp" />

        

    </RelativeLayout>

</RelativeLayout>