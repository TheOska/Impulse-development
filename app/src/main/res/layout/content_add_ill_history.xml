<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disease Name"
        android:textSize="28dp"
        android:layout_marginLeft="10dp"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edt_disease_name"
        android:layout_marginLeft="10dp"
        android:layout_width="370dp"
        android:textSize="20dp"
        android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disease Description"
            android:textSize="28dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/edt_disease_desc"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:minLines="2"
            android:textSize="20dp"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:layout_width="370dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="200dp">

            <ImageView
                android:id="@+id/btn_accept"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/circle_sharp" />

            <ImageView
                android:id="@+id/btn_accept_request_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignBottom="@+id/btn_accept"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_done_white_24dp" />

        </RelativeLayout>

</LinearLayout>