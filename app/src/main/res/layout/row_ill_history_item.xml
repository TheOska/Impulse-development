<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clickable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/bg_circle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_width="6dp"
        android:layout_marginLeft="30dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout">

        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:background="@color/colorAccent" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:id="@+id/ill_id"
        android:textSize="23dp"
        android:textColor="@color/pure_white"
        android:layout_marginLeft="@dimen/circle_text_AVD_margin_left_size"
        android:layout_marginTop="@dimen/circle_text_AVD_margin_top_size"

        />
</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="23dp"
            android:id="@+id/create_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="date"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_below="@+id/disease_name"
            android:layout_alignLeft="@+id/disease_name"
            android:layout_alignStart="@+id/disease_name" />
    <TextView
        android:id="@+id/disease_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="60dp"
        android:text="name"
        android:textSize="28dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <!--<TextView-->
        <!--android:id="@+id/disease_desc"-->
        <!--android:layout_width="128dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:text="name"-->
        <!--android:textSize="20dp" />-->
    </LinearLayout>
</LinearLayout>